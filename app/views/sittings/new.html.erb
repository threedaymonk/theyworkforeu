<h1>New sitting</h1>

<% form_for(@sitting) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sat_on %><br />
    <%= f.date_select :sat_on %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sittings_path %>