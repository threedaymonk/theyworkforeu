<% @page_title = 'European Parliament sittings' -%>

<% content_for :head do -%>
<link href="<%= sittings_path(:format=>'atom') %>" type="application/atom+xml" rel="alternate" title="Sittings atom Feed" />
<% end -%>

<div class="info">
  <h1>European Parliament sittings</h1>
  <p>
  Inspired by <a href="http://www.theyworkforyou.com/">TheyWorkForYou.com</a> and <a href="http://theyworkforyou.co.nz/">TheyWorkForYou.co.nz</a>, <strong>TheyWorkFor.EU</strong> helps you understand whatâ€™s going on in the European Parliament without needing you to understand all 23 official languages of the European Union.
  </p>
  <ul>
  <% @sittings.each do |sitting| -%>
    <li>
      <h2><%= link_to sitting.sat_on.strftime("%d %B %Y").sub(/^0/,''), sitting -%> -
      <%=h sitting.location -%>
      </h2>
      <p><strong>Tags:</strong>
      <% (YAML::load(sitting.tags.to_s)).to_a.each do |tag| %>
        <%= link_to h(tag), tag_path(CGI.escape(h(tag))) %>
      <% end %>
      </p>
    </li>
  <% end -%>
  </ul>
</div>
